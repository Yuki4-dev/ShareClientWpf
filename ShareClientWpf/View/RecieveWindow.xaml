<local:WindowBase x:Class="ShareClientWpf.RecieveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareClientWpf"
        mc:Ignorable="d"
        Style="{StaticResource DialogWindowStyle}"
        ExecuteCallback="{Binding Execute, Mode=OneWayToSource}"
        Title="RecieveWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:RecieveWindowViewModel />
    </Window.DataContext>

    <StackPanel HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Port" 
                       Margin="8" 
                       FontSize="24"/>
            <TextBox  Text="{Binding PortText ,Mode=TwoWay}" 
                      Margin="8" 
                      Width="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button Margin="4" 
                    Style="{StaticResource DefaultButtonStyle}" 
                    Content="開始" 
                    Command="{Binding RecieveCommand}"/>
            
            <Button Margin="4" Style="{StaticResource DefaultButtonStyle}" 
                    Content="キャンセル" 
                    Command="{Binding CloseCommand}"/>
            
        </StackPanel>

    </StackPanel>
</local:WindowBase>
