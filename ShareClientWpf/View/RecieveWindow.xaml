<local:WindowBase x:Class="ShareClientWpf.RecieveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareClientWpf"
        mc:Ignorable="d"
        IsCasheWindow="True"
        Style="{StaticResource DialogWindowStyle}"
        Title="RecieveWindow">

    <Window.DataContext>
        <local:RecieveWindowViewModel />
    </Window.DataContext>

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource DialogRowHeight}"/>
            <RowDefinition Height="{StaticResource DialogRowHeight}"/>
            <RowDefinition Height="{StaticResource DialogRowHeight}"/>
        </Grid.RowDefinitions>
        
        <Grid.Resources>
            
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Width" Value="100"/>
            </Style>

        </Grid.Resources>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <TextBlock Text="PORT："/>
            <TextBox Text="{Binding PortText ,Mode=TwoWay}" 
                 Width="120"/>
            
        </StackPanel>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

            <Button Content="開始" 
                    Command="{Binding RecieveCommand}"/>
            <Button Content="キャンセル" 
                    Command="{Binding CloseCommand}"/>
            
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">

            <TextBlock Grid.Row="2"
                   Grid.ColumnSpan="2" 
                   Foreground="Red"
                   FontSize="16"
                   Text="{Binding Message}"/>
            
        </StackPanel>

    </Grid>
    
</local:WindowBase>
