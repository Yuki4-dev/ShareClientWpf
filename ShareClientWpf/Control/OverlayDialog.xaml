<UserControl
    x:Class="ShareClientWpf.OverlayDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShareClientWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Template>

        <ControlTemplate TargetType="UserControl">

            <Grid>

                <Border
                    Background="#7f000000"
                    MouseDown="Border_MouseDown"
                    WindowChrome.IsHitTestVisibleInChrome="true">

                    <Grid
                        Width="{Binding DialogWidth, RelativeSource={RelativeSource AncestorType=local:OverlayDialog}}"
                        Height="{Binding DialogHeight, RelativeSource={RelativeSource AncestorType=local:OverlayDialog}}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <ContentPresenter />

                    </Grid>

                </Border>

            </Grid>

        </ControlTemplate>
    </UserControl.Template>

</UserControl>
